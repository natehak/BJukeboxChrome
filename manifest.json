{
  "manifest_version": 2,

  "name": "Bridges Jukebox",
  "description": "Press the button to submit songs to the Bridges Jukebox.",
  "version": "1.1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "permissions": [
    "storage", "contextMenus"
  ],
  
  "background": {
      "scripts": ["event.js"],
      "persistent": false
  },

  "icons": { 
    "128": "icon.png"
  },

  "options_page": "options.html"

}

